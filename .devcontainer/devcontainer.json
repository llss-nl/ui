{
    "name": "Python 3",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "jetbrains": {
            "backend": "PyCharm"
        }
    },
    "postCreateCommand": "echo 'Container setup complete!'",
    "remoteUser": "root",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ]
}
